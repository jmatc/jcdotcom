doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title= (locals.title ? locals.title + ' - ' : '') + 'Jonathan Calvin - Front End Software Engineer'
    link(rel='stylesheet', href='/css/main.css')
    link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
    link(href='/rss', rel='alternate', title='Jonathan Calvin Blog Feed', type='application/atom+xml')

  body(class=locals.page ? 'page-' + locals.page + (locals.page === 'index' ? '' : ' page-secondary') : '')
    include inc/header
    block content
    include inc/footer
