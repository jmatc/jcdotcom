doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='application-name' content='Jonathan Calvin: Front End Software Engineer')
    title= (locals.title ? locals.title + ' - ' : '') + 'Jonathan Calvin - Front End Software Engineer'
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600')
    link(rel='stylesheet', href='css/app.css')
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='apple-touch-icon-144x144.png')
    link(rel='apple-touch-icon-precomposed', sizes='152x152', href='apple-touch-icon-152x152.png')
    link(rel='icon', type='image/png', href='favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='favicon-16x16.png', sizes='16x16')
    link(href='/rss', rel='alternate', title='Jonathan Calvin Blog Feed', type='application/atom+xml')

  body(class=locals.page ? 'page-' + locals.page + (locals.page === 'index' ? '' : ' page-secondary') : '')
    #wrap
      section#intro.group(role="banner")
        div.intro-text
          h1.title Jonathan Calvin
          h2.subhead.pull Front End Software Engineer
            span one Event at a time
      block content
      nav#main-navigation(role="navigation")
        ul.group
          li
            a.icon-github(href="https://github.com/jmatc", title="GitHub", target='blank') GitHub
          li.linkedin
            a.icon-linkedin(href="https://www.linkedin.com/in/jmatc", title="LinkedIn", target='blank') LinkedIn
          li.twitter
            a.icon-twitter(href="https://twitter.com/jmatc", title="Twitter", target='blank') Twitter
          li.mail
            a.icon-mail(href="mailto:jc@jonathancalvin.com", title="Email") Mail
          li.tooltip
      include inc/footer
    script(src='js/app.js')
    
